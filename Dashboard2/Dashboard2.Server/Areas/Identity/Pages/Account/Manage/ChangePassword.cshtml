@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change Password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h2 class="title is-4">@ViewData["Title"]</h2>
<partial name="_StatusMessage" for="StatusMessage" />

<form id="change-password-form" method="post">
    <div asp-validation-summary="ModelOnly" class="is-danger" role="alert"></div>
    <div class="field">
        <label asp-for="Input.OldPassword" class="label"></label>
        <input asp-for="Input.OldPassword" class="input" autocomplete="current-password" aria-required="true" />
        <span asp-validation-for="Input.OldPassword" class="help is-danger"></span>
    </div>
    <div class="field">
        <label asp-for="Input.NewPassword" class="label"></label>
        <input asp-for="Input.NewPassword" class="input" autocomplete="new-password" aria-required="true" />
        <span asp-validation-for="Input.NewPassword" class="help is-danger"></span>
    </div>
    <div class="field">
        <label asp-for="Input.ConfirmPassword" class="label"></label>
        <input asp-for="Input.ConfirmPassword" class="input" autocomplete="new-password" aria-required="true" />
        <span asp-validation-for="Input.ConfirmPassword" class="help is-danger"></span>
    </div>
    <button type="submit" class="button is-primary is-fullwidth">Update Password</button>
</form>

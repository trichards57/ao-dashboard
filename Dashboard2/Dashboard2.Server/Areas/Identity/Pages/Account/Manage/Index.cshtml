@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h2 class="title is-4">@ViewData["Title"]</h2>
<partial name="_StatusMessage" for="StatusMessage" />

<form id="profile-form" method="post">
    <div asp-validation-summary="ModelOnly" class="notification is-danger" role="alert"></div>
    <div class="field">
        <label asp-for="Input.Name" class="label"></label>
        <input asp-for="Input.Name" class="input" placeholder="John Smith" />
        <span asp-validation-for="Input.Name" class="help is-danger"></span>
    </div>
    <button id="update-profile-button" type="submit" class="button is-primary is-fullwidth">Save</button>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
